<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:id="@+id/transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Transaction"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_black"
        android:textColor="#000000"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/cropTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crop"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_black"
        android:textColor="@color/green"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/quantityTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cropTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/quantityTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/locationTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/accountNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Account Number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/priceTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/ifscCodeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IFSC Code"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/accountNumberTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/transactionStatusTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Transaction Status"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ifscCodeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/transactionIdEditText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Enter Transaction ID"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/transactionStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFFFFF"
        android:elevation="15dp"
        android:fontFamily="@font/lato"
        android:padding="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/transactionIdEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_green"
        android:fontFamily="@font/lato_black"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
